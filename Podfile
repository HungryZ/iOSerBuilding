platform :ios, '11.0'
use_modular_headers!
source 'https://github.com/CocoaPods/Specs.git'

# ruby grammar
targetsArray = ['iOSerBuilding']
targetsArray.each do |t|
    target t do
        pod 'AFNetworking'
        pod 'YTKNetwork'
        pod 'Masonry'
        pod 'MJRefresh'
        pod 'MJExtension'
        pod 'CYLTabBarController'
        pod 'HungryTools'
        pod 'HungryTools/Macro'
#        pod 'MLeaksFinder'
        pod 'IQKeyboardManager'
        pod 'ZHCPickerHelper'
        pod 'TZImagePickerController'
        pod 'CocoaLumberjack'
        pod 'SDCycleScrollView'
        pod 'YYKit'
        pod 'Aspects'
        
        # Swift
        pod 'Kingfisher'
        pod 'RxSwift'
        pod 'RxCocoa'
        pod 'Then'
    end
    
end
